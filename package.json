{
  "name": "@carere/gel-better-auth",
  "author": "Kevin Abatan <abatan.k@gmail.com> (https://github.com/carere)",
  "description": "Gel database adapter for better-auth",
  "type": "module",
  "keywords": [
    "better-auth",
    "gel",
    "typescript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": "https://github.com/carere/gel-better-auth/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/carere/gel-better-auth.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "format": "biome format --write --no-errors-on-unmatched .",
    "lint": "biome check --write .",
    "knip": "knip",
    "check": "tsc --build",
    "test": "vitest",
    "generate": "bunx @better-auth/cli generate"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "remeda": "^2.26.1",
    "ts-pattern": "^5.7.1"
  },
  "peerDependencies": {
    "better-auth": "^1.2.12",
    "gel": "^2.1.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@biomejs/biome": "latest",
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "knip": "latest",
    "lefthook": "latest",
    "sort-package-json": "latest",
    "vitest": "latest",
    "typescript": "latest"
  }
}
